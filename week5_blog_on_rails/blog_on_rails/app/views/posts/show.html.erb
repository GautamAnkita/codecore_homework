<div class="mb-3 mx-3">
  <h2><%= @post.title %></h2>
  <p><%= @post.body %></p>
<div class= "mb-3">
  <small>
    Posted <%= time_ago_in_words(@post.created_at) %> ago
  </small>
</div>

<div class= "mb-3">

<%if user_signed_in?%>

<div>
    <% if can?(:edit, @post) %>
    <small>
        <%= link_to "Edit", edit_post_path(@post), class: "btn btn-outline-primary btn-sm" %>
    </small>
    <% end %>
    
    <% if can?(:delete, @post) %>
      <%= link_to(
        "Delete",
        post_path(@post),
        method: :delete,
        data: {
          confirm: "Are you sure you want to delete this post?"
        }, 
        class: "btn btn-outline-primary btn-sm")  
      %>
    <% end %>
  </div>
  <% end %>
</div>

<div class= "mb-4">
<h4>Comments</h4>

<%= form_for [@post,@comment] do |f| %>
  <div>
    <%= f.text_area :body, class: "form-control mb-3" , placeholder: "What's on your mind?"%>
  </div>
  <br>

  <%= f.submit "Submit", class: "btn btn-outline-primary btn-sm" %>
<% end %>
</div>

<% @comments.each do |c|%>
  
  <h7><%= c.body %></h7>
  <br/>

  <small>
          Commented <%= time_ago_in_words(c.created_at) %> ago
  </small>
  â€¢
  <% if user_signed_in? && can?(:delete, c) %>

    <small>
      <%= link_to(
        "Delete",
        post_comment_path(@post,c),
        method: :delete,
        data: {
          confirm: "Are you sure you want to delete this review?"
        }
      ) %>
    </small>
  <% end %>
  <br/>
  
<% end %>

</div>
