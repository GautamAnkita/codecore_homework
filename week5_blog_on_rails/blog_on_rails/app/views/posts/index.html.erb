
<div class="row mx-1">

<% @posts.each do |p|%>
    <div class="col-xs-12 col-md-6 col-lg-4">
    <div class="card mb-3 mx-3">
    <div class="card-body">
        <h5 class="card-title"><%= link_to(
            p.title,
            post_path(p.id)) %></h5>

        <h6 class="card-text"><%= (p.body).truncate(30) %></h6>
    </div>
    </div>
    </div>

   

<% end %>
 </div>
