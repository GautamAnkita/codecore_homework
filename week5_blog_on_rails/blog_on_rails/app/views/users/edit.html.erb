<h1>Edit Details</h1>

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <p>
      <%= @user.errors.full_messages.join(', ') %>
    </p>a
  <% end %>

    <div>
    <%= f.label :name, "Enter your name" %>
    <%= f.text_field :name %>
    </div>

   <div>
    <%= f.label :email, "Enter your new email" %>
    <%= f.email_field :email %>
   </div>

  <%= f.submit "Submit"%>

  <span class="nav-item active">
        <%= link_to(
          'Change Password',
          user_change_password_path(current_user.id),
          class: "nav-link" 
        ) %>
 </span>
<% end %>